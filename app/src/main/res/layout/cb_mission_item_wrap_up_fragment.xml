<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cb_mission_item_wrap_up_fragment"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">


    <ScrollView
        android:id="@+id/scroll_mission_item_wrap_up"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="3dp"
        android:layout_marginStart="3dp"
        android:background="#ddffffff"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="parent">

        <!-- Can only have one element immediately below ScrollView -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/text_mission_accomplished"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:text="Mission Accomplished"
                android:textColor="#232323"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />


            <TextView
                android:id="@+id/text_outcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Outcome"
                android:textColor="#232323"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" />


            <RelativeLayout
                android:id="@+id/rel_layout"
                android:layout_width="352dp"
                android:layout_height="50dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:background="#ffffff"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp">

                <Spinner
                    android:id="@+id/mission_item_outcome"
                    android:layout_width="368dp"
                    android:layout_height="wrap_content"
                    android:entries="@array/outcome_array"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="93dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>


            <TextView
                android:id="@+id/text_notes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Notes"
                android:textColor="#232323"
                android:textStyle="bold"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" />



            <EditText
                android:id="@+id/edit_text_notes"
                android:layout_width="352dp"
                android:layout_height="153dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="#ffffff"
                android:gravity="top"
                android:inputType="text|textMultiLine" />


            <Button
                android:id="@+id/button_submit_get_another"
                android:layout_width="352dp"
                android:layout_height="48dp"
                android:background="@color/com_facebook_blue"
                android:gravity="center"
                android:text="Submit and Get Another Mission"
                android:textColor="#ffffff"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/button_submit_and_quit"
                android:layout_width="354dp"
                android:layout_height="43dp"
                android:layout_marginTop="48dp"
                android:background="@color/com_facebook_blue"
                android:gravity="center"
                android:text="Submit and Logout"
                android:textColor="#ffffff"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp" />


        </LinearLayout>

    </ScrollView>



</android.support.constraint.ConstraintLayout>