<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_layout_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/usflag2"
    android:orientation="vertical"
    android:weightSum="3">


    <com.brentdunklau.telepatriot_android.VideoFrameLayout
        android:id="@+id/vidyoChatMyScreen"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintStart_toStartOf="parent">
    </com.brentdunklau.telepatriot_android.VideoFrameLayout>

    <com.brentdunklau.telepatriot_android.VideoFrameLayout
        android:id="@+id/remoteChatScreen"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/vidyoChatMyScreen"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vidyoChatMyScreen"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintWidth_percent="0.5"></com.brentdunklau.telepatriot_android.VideoFrameLayout>

    <!-- works but not sure if useful - the buttons to mute the camera and mic
    <ToggleButton
        android:id="@+id/camera_button"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/toggle_camera_privacy"
        android:textOff=""
        android:textOn=""
        app:layout_constraintStart_toEndOf="@+id/connect_button"
        app:layout_constraintTop_toTopOf="@+id/connect_button" />

    <ToggleButton
        android:id="@+id/microphone_button"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/toggle_mic_privacy"
        android:textOff=""
        android:textOn=""
        app:layout_constraintStart_toEndOf="@+id/camera_button"
        app:layout_constraintTop_toTopOf="@+id/connect_button" />
        -->

    <ToggleButton
        android:id="@+id/record_button"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/record"
        android:textOff=""
        android:textOn=""
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/microphone_button"
        app:layout_constraintTop_toTopOf="@+id/connect_button" />

    <!-- Took this out because null viewId in mVidyoConnector() keeps the camera from flipping around
                not sure why yet 6/19/18
            <ToggleButton
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/camera_switch"
                android:id="@+id/camera_switch"
                android:layout_marginLeft="10dp"
                android:textOff=""
                android:textOn=""/>
                -->


    <Button
        android:id="@+id/instructions_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:text="Instructions"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ToggleButton
        android:id="@+id/connect_button"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="32dp"
        android:background="@drawable/toggle_connect"
        android:textOff=""
        android:textOn=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>