<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">



    <EditText
        android:id="@+id/edit_new_phone_campaign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:hint="Google Spreadsheet URL"
        android:layout_weight="1"
        android:layout_above="@+id/submit_new_phone_campaign"
        android:layout_marginBottom="72dp"
        android:layout_alignParentEnd="true" />



    <Button
        android:id="@+id/submit_new_phone_campaign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="true"
        android:textColor="#ffffff"
        android:text="OK"
        android:background="@color/com_facebook_blue"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/paste_new_phone_campaign"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/paste_new_phone_campaign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="true"
        android:textColor="#ffffff"
        android:text="PASTE"
        android:background="@color/com_facebook_blue"
        android:layout_marginTop="222dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>