<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.brentdunklau.telepatriot_android.LimboActivity">

    <TextView
        android:id="@+id/txt_limbo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="112dp"
        android:text="Limbo"
        android:textSize="24sp" />


    <TextView
        android:id="@+id/txt_account_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:text="Account Status"
        android:textSize="24sp"
        android:layout_below="@+id/txt_limbo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />

    <ListView
        android:id="@+id/account_status_events"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignLeft="@+id/txt_account_status"
        android:layout_alignStart="@+id/txt_account_status"
        android:layout_below="@+id/txt_account_status"
        android:layout_marginTop="23dp" />
</RelativeLayout>